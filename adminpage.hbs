<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible"
		content="IE=edge">
	<meta name="viewport"
		content="width=device-width, 
				initial-scale=1.0">
	<title>VIThreads</title>
	<link rel="stylesheet"
		href="styleadmin.css">
	<link rel="stylesheet"
		href="responsive.css">
	<link rel="stylesheet"
	    href="homepage.css">	
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    
</head>

<body>
	<header>
		<div class="logosec">
			<div class="logo">Admin Dashboard</div>
			<img src="views/menu.svg"
				class="icn menuicn"
				id="menuicn"
				alt="menu-icon">
				
		</div>
                
					
	</header>

	<div class="main-container" id="mc">
		<div class="navcontainer">
			<nav class="nav">
				<div class="nav-upper-options">
					<div class="nav-option option1" id="1" onclick="window.location.href='/adminhome'" style="color: white;">
						<img src="views/home.svg"
							class="nav-img"
							alt="home">
						<h3>Home</h3>
					</div>

					<div class="nav-option option2" id="2" onclick="window.location.href='/insert'">
						<img src="views/insert.svg"
							class="nav-img"
							alt="insertcontent">
						<h3> Insert Content</h3>
					</div>

					<div class="nav-option option3" id="3" onclick="optclk(this.id)">
						<img src="views/delete.svg"
							class="nav-img"
							alt="deletecontent">
						<h3>Delete Content</h3>
					</div>

					
					<div class="nav-option logout" id="4" onclick="optnclk()"> 
						<img src="views/logout.svg"
							class="nav-img"
							alt="logout">
						<h3>Logout</h3>
					</div>
				</div>
			</nav>
		</div>
		<div class="main">
		   <div class="home" id="hm">
            {{#each news}}
            <div>
                <div class="nbox">
                <div class="frame">
                    <div class="pic">
                    <img src="/images/Picture{{this.SLNo}}.png" width="348" height="245">
                    </div>
                    <div class="reactions">
                    <button>üëçüèª</button>
                    <button style="color:red;">‚ù§Ô∏è</button>
                    <button>üòÆ</button>
                    </div>
                </div>
                <div class="newsarea"><div><div><div><h4 itemprop="headline" class="S2DdZEgzkqC9bYeTJUGw">{{this.Title}}</h4></div>
                <div class="njwxOAklpbTYvII3gDje">
                    <span class="author">{{this.Campus}}</span> on <span clas="date">{{this.Date}}</span></div></div>
                    <div><div itemprop="articleBody" class="summary" id="sum{{this.SLNo}}" >{{this.Summary}}</div></div></div>
                    <div><a class="readmore" id="read{{this.SLNo}}" target="_blank" href="readMore.html?value={{this.Details}}">Read more...</a></div>
                    <div class="botm">
                    <button class="txtsph" id="speakButton{{this.SLNo}}" onclick="btnclk(this.id)" style="font-size:15px"><i id="icn{{this.SLNo}}" class="fa fa-volume-up"></i>Text to Speech</button>
                </div></div>

                </div>
            </div> 

            {{/each}}
		   </div>
		<script src="speak.js"></script>
        <script>
            let menuicn = document.querySelector(".menuicn");
            let nav = document.querySelector(".navcontainer");
            
            menuicn.addEventListener("click", () => {
                nav.classList.toggle("navclose");
            })
			
		
			function optnclk(){
				window.location.replace("login.html");	
			}
			
        </script>
</body>
</html>