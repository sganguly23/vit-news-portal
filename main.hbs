              <img src="/images/Picture{{this.SLNo}}.png" width="348" height="245">
            </div>
            <div class="reactions">
              <button id="rt1{{this.SLNo}}" onclick="rtclk(this.id)">üëçüèª</button>
              <button id="rt2{{this.SLNo}}" onclick="rtclk(this.id)" style="color:red;">‚ù§Ô∏è</button>
              <button id="rt3{{this.SLNo}}" onclick="rtclk(this.id)">üòÆ</button>
            </div>
          </div>
          <div class="newsarea"><div><div><div><h4 itemprop="headline" >{{this.Title}}</h4></div>
          <div class="njwxOAklpbTYvII3gDje">
            <span clas="date">{{this.Date}}</span></div></div>
            <div><div itemprop="articleBody" class="summary" id="sum{{this.SLNo}}" >{{this.Summary}}</div></div></div>
            <div><a class="readmore" id="read{{this.SLNo}}" target="_blank" href="readMore.html?value={{this.Details}}">Read more...</a></div>
            <div class="botm">
            <button class="txtsph" id="speakButton{{this.SLNo}}" onclick="btnclk(this.id)" style="font-size:15px"><i id="icn{{this.SLNo}}" class="fa fa-volume-up"></i>Text to Speech</button>
          </div></div>

        </div>
      </div> 

      {{/each}}
      <script src="speak.js"></script> 
      <script>
        function rtclk(clk){
          const trans=document.getElementById(clk)
          if (trans.style.transform=="scale(1.5)"){
            trans.style.transform="scale(1)"
          }else{
            trans.style.transform="scale(1.5)";
          }
        }
      </script>
    </div>
